{
  "name": "reactive",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel dev:sass dev:cljs",
    "dev:cljs": "npx shadow-cljs watch dev",
    "dev:sass": "node-sass src/styles/main.scss -w public/styles/main.css",

    "build": "npm-run-all --parallel build:js build:css build:html",
    "build:js": "shadow-cljs release prod",
    "build:css": "node-sass src/styles/main.scss public/styles/main.css --output-style compressed --recursive --include-path node_modules --source-map true",
    "build:html": "node build-scripts/copy.js",

    "share": "ngrok http --host-header=rewrite 8080",
    "serve": "npm run build && http-server dist"
  },
  "devDependencies": {
    "ngrok": "^3.2.7",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "shadow-cljs": "2.8.83"
  },
  "dependencies": {
    "d3": "^5.14.2",
    "normalize-scss": "^7.0.1",
    "rxjs": "^6.5.3"
  }
}
